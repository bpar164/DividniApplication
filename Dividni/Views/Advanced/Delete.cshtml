@model Dividni.Models.Advanced

@{
    ViewData["Title"] = "Advanced: Delete";
    ViewData["Heading"] = "Advanced Multiple-Choice Questions";
    ViewData["Description"] = "Delete an advanced multiple-choice question";
}

<section class="section container blue lighten-5" id="main">
    <div class="row">
        <div class="col s12 m12 l10">
            <h5 class="teal-text">Question Details</h5>
            <p>Delete the following question?</p>
            <div>
                <b>Name: </b>@Html.DisplayFor(model => model.Name)</br>
                </br><b>Question:</b></br>
                <div id="editorContainer">
                    <div id="editor" value="@Model.Question"></div>
                </div></br>
            </div>
            <div class="row">
                <div class="col">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="waves-effect waves-light btn red">Delete<i
                                class="material-icons right">delete</i></button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <a class="waves-effect waves-light btn" asp-action="Index">
                        Return to list<i class="material-icons right">list</i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
