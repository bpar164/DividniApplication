@model Dividni.Models.Advanced

@{
    ViewData["Title"] = "Advanced: Share";
    ViewData["Heading"] = "Advanced Multiple-Choice Questions";
    ViewData["Description"] = "Share an advanced multiple-choice question with another user";
}

<div id="message" value="@ViewData["Message"]"></div>

<section class="section container blue lighten-5" id="main">
    <div class="row">
        <div class="col">
            <h5 class="teal-text">Question Details</h5>
            <p>Share the following question?</p>
            <div>
                <b>Name: </b>@Html.DisplayFor(model => model.Name)</br>
                </br><b>Question:</b></br>
                <div id="question"></div></br>
            </div>
            <h6 class="teal-text">Share</h6>
            <form onSubmit="return shareAdvancedQuestionForm(event)">
                Enter user email:
                <div class="input-field inline"><input type="email" id="email" name="email" required></div>
                <button type="submit" class="waves-effect waves-light btn orange">Share<i
                        class="material-icons right">share</i></button>
            </form>
            <a class="waves-effect waves-light btn" asp-action="Index">
                Return to list<i class="material-icons right">list</i>
            </a>
        </div>
    </div>
    <form asp-action="Share" id="aspQuestionForm">
        <input asp-for="Name" id="aspName" type="hidden" />
        <input asp-for="Type" id="aspType" value="Advanced" type="hidden" />
        <input asp-for="Question" id="aspQuestion" type="hidden" />
        <input asp-for="UserEmail" id="aspUserEmail" value="@User.Identity.Name" type="hidden" />
        <input asp-for="ModifiedDate" id="aspModifiedDate" type="hidden" />
    </form>
</section>
